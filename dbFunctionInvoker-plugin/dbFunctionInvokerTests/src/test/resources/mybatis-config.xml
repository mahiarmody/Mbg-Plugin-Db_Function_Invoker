<!-- Created by Mahiar Mody for testing the MyBatis Generator Database Function Invoker Plugin -->

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC">
				<property name="" value="" />
			</transactionManager>
			<dataSource type="UNPOOLED">
				<property name="driver" value="org.hsqldb.jdbcDriver" />
				<property name="url" value="jdbc:hsqldb:hsql://localhost:9001/db_fn_invkr" />
				<property name="username" value="sa" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<!-- For Conditional Model -->

		<mapper resource="conditional/sqlMaps/UserBlogMapper.xml" />
		<mapper resource="conditional/sqlMaps/UserPhotosMapper.xml" />
		<mapper resource="conditional/sqlMaps/UserSkillsMapper.xml" />
		<mapper resource="conditional/sqlMaps/UsersMapper.xml" />
		<mapper resource="conditional/sqlMaps/UsersToSkillsMapper.xml" />
		<mapper resource="conditional/sqlMaps/UserTutorialMapper.xml" />


		<!-- For Hierarchical Model -->

		<mapper resource="hierarchical/sqlMaps/UserBlogMapper.xml" />
		<mapper resource="hierarchical/sqlMaps/UserPhotosMapper.xml" />
		<mapper resource="hierarchical/sqlMaps/UserSkillsMapper.xml" />
		<mapper resource="hierarchical/sqlMaps/UsersMapper.xml" />
		<mapper resource="hierarchical/sqlMaps/UsersToSkillsMapper.xml" />
		<mapper resource="hierarchical/sqlMaps/UserTutorialMapper.xml" />


		<!-- For Flat Model -->

		<mapper resource="flat/sqlMaps/UserBlogMapper.xml" />
		<mapper resource="flat/sqlMaps/UserPhotosMapper.xml" />
		<mapper resource="flat/sqlMaps/UserSkillsMapper.xml" />
		<mapper resource="flat/sqlMaps/UsersMapper.xml" />
		<mapper resource="flat/sqlMaps/UsersToSkillsMapper.xml" />
		<mapper resource="flat/sqlMaps/UserTutorialMapper.xml" />

	</mappers>

</configuration>
